<com.google.android.apps.remixer.TransactionItemView
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:padding="@dimen/defaultPadding">

  <ImageView
    android:id="@+id/businessTypeIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_centerVertical="true"
    android:layout_marginEnd="@dimen/defaultPadding"
    android:layout_marginRight="@dimen/defaultPadding"
    android:src="@drawable/ic_bar"/>

  <TextView
    android:id="@+id/businessName"
    android:layout_toRightOf="@id/businessTypeIcon"
    android:layout_toEndOf="@id/businessTypeIcon"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="SomeBusiness"/>

  <TextView
    android:id="@+id/date"
    android:layout_toRightOf="@id/businessTypeIcon"
    android:layout_toEndOf="@id/businessTypeIcon"
    android:layout_below="@id/businessName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/DateText"
    android:text="Today"/>

  <TextView
    android:id="@+id/amount"
    android:layout_toRightOf="@id/businessName"
    android:layout_toEndOf="@id/businessName"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="end|right|center_vertical"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_centerVertical="true"
    android:text="Today"/>


</com.google.android.apps.remixer.TransactionItemView>
