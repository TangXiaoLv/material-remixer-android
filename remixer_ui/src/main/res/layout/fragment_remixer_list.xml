<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/remixerContainer"
  android:name="com.google.android.libraries.remixer.view.RemixerFragment"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="vertical"
  android:theme="@style/RemixerTheme"
  tools:context="com.google.android.libraries.remixer.ui.view.RemixerTargetBinder">

  <include
    android:id="@+id/remixerHeader"
    layout="@layout/remixer_header"/>

  <include
    android:id="@+id/shareDrawer"
    layout="@layout/remixer_share_drawer"
    android:visibility="gone"/>

  <LinearLayout
    android:id="@+id/listTags"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="24dp"/>

  <FrameLayout
    android:id="@+id/listContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"/>
</LinearLayout>
